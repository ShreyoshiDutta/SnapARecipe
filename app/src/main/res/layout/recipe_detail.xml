<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:background="@android:color/background_light"
    >

    <include layout="@layout/detailedrecipelabels" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
        android:layout_below="@id/detailedRecipeLabels"
    tools:context="com.sree.snaparecipe.RecipeDetailFragment" />

    <ImageView
        android:id="@+id/detailedRecipeImg"
        android:layout_width="100pt"
        android:layout_height="100pt"
        app:srcCompat="@drawable/default_recipe"
        android:layout_below="@id/recipe_detail"/>

</RelativeLayout>
