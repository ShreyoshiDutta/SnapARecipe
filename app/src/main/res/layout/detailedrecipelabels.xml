<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="20pt"
    android:id="@+id/detailedRecipeLabels"
    tools:showIn="@layout/recipe_detail">

    <TextView
        android:id="@+id/timetocook"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:text="10 min"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timetocook"
        android:id="@+id/space" />

    <TextView
        android:id="@+id/healthScore"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_toRightOf="@id/timetocook"
        android:text="10 min" />

    <ImageView
        android:id="@+id/imageHealthy"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_toRightOf="@id/healthScore"
        app:srcCompat="@drawable/very_healthy" />

    <ImageView
        android:id="@+id/imagePopular"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_toRightOf="@id/imageHealthy"
        app:srcCompat="@drawable/popular" />

    <ImageView
        android:id="@+id/imageVegan"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_toRightOf="@id/imagePopular"
        app:srcCompat="@drawable/vegan" />

    <ImageView
        android:id="@+id/imageVege"
        android:layout_width="35pt"
        android:layout_height="35pt"
        android:layout_toRightOf="@id/imageVegan"
        app:srcCompat="@drawable/vege" />

</RelativeLayout>