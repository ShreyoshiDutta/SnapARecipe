<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sree.snaparecipe">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- to store image of ingredients -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ImageCapture" />
        <activity
            android:name=".ListIngredients"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sree.snaparecipe.HomeActivity" />
        </activity>
        <activity android:name=".RecipeListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sree.snaparecipe.ListIngredients" />
        </activity>
        <activity
            android:name=".RecipeDetailActivity"
            android:label="@string/title_recipe_detail"
            android:parentActivityName=".RecipeListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sree.snaparecipe.RecipeListActivity" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.sree.snaparecipe"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="CLOUDINARY_URL"
            android:value="cloudinary://492815673726876:0IjSkNjIO0JwG1DbkmSHZx8qkws@dccxbk5g8" />
        <meta-data
            android:name="isStubbed"
            android:value="false" />

        <activity android:name=".HelpActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".PreferencesActivity" />
    </application>

</manifest>